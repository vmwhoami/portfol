
<div class="container">
  <div class="header my-5">
    <h1 class="header__h1"><%= @portfolio_item.title %> <span class="header__color"></span>
      <span class="header__back">portfolio</span>
    </h1>
  </div>
       

    <div class="row mt-5">

        <div class="col-lg-6 col-md-12">
          <%= image_tag @portfolio_item.main_image, class: "img-fluid" %>
        </div>


        <div class=" col-12 col-lg-6  ">
          <em class=" my-5 "><%= @portfolio_item.subtitle %></em>
          <p><%= @portfolio_item.body %></p>
          <h2>Technologies used</h2>
        <hr class="white-line mr-5">
          <% @portfolio_item.technologies.each do |t| %>
            <%= t.name %> 
          <% end %>

          <% @github = @portfolio_item.github_link %>
          <% @live = @portfolio_item.live_link %>
          <%= render 'shared/github_live_links' %>
          
        </div>
    </div>
</div>